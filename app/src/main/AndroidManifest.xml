<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.it_garten.micha.garbagesaver">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Show_Overview">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Show_Erased"
            android:label="@string/title_activity_show__erased"
            android:parentActivityName=".Show_Overview"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Show_Overview" />
        </activity>
        <activity
            android:name=".Show_Dates"
            android:label="@string/title_activity_show__dates"
            android:parentActivityName=".Show_Overview"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Show_Overview" />
        </activity>
        <activity android:name=".Show_Help"
            android:label="@string/title_activity_show__help"
            android:parentActivityName=".Show_Overview"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Show_Overview" />
        </activity>
        <activity android:name=".Show_Info"
            android:label="@string/title_activity_show__info"
            android:parentActivityName=".Show_Overview"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Show_Overview" />
        </activity>
        <activity
            android:name=".Show_Settings"
            android:label="@string/title_activity_show__settings"
            android:parentActivityName=".Show_Overview">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Show_Overview" />
        </activity>
        <receiver
            android:enabled="true"
            android:name="de.it_garten.micha.garbagesaver.Autostart"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">

        <intent-filter>

            <action android:name="android.intent.action.BOOT_COMPLETED" />

        </intent-filter>

    </receiver>
    </application>
</manifest>
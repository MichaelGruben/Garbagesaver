<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.it_garten.micha.garbagesaver"
    android:versionCode="3"
    android:versionName="Celluloseabfall">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Overview">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Show_Erased"
            android:label="@string/title_activity_show__erased"
            android:parentActivityName=".Overview"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.it_garten.micha.garbagesaver.Overview" />
        </activity>
        <activity
            android:name=".Show_Dates"
            android:label="@string/title_activity_show__dates"
            android:parentActivityName=".Overview"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.it_garten.micha.garbagesaver.Overview" />
        </activity>
    </application>

</manifest>